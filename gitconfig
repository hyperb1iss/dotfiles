	meta = 221           # yellow - meta information
	frag = 183 bold      # purple - hunk header
	old = 197            # red - deletions
	new = 149            # green - additions
	whitespace = 197 reverse
[color "status"]
	added = 149          # green - added files
	changed = 212        # bright purple/pink - changed files
	untracked = 123      # cyan - untracked files
