DOTFILES=~/dev/dotfiles

ln -sf $DOTFILES/vimrc ~/.vimrc
ln -sf $DOTFILES/vim ~/.vim
ln -sf $DOTFILES/bashrc ~/.bashrc
ln -sf $DOTFILES/gitconfig ~/.gitconfig

cp -av $DOTFILES/fonts ~/.fonts
fc-cache -f

sudo ln -sf $DOTFILES/rules.d/60-android.rules /etc/udev/rules.d/60-android.rules
sudo ln -sf $DOTFILES/xorg.conf.d/51-samsung-laptop.conf /usr/share/X11/xorg.conf.d/51-samsung-laptop.conf
