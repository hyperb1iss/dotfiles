DOTFILES=~/dev/dotfiles

ln -sfv $DOTFILES/vimrc ~/.vimrc
rm ~/.vim
ln -sfv $DOTFILES/vim/ ~/.vim
ln -sfv $DOTFILES/bashrc ~/.bashrc
ln -sfv $DOTFILES/gitconfig ~/.gitconfig

cp -av $DOTFILES/fonts ~/.fonts
fc-cache -f

sudo cp -v $DOTFILES/rules.d/60-android.rules /etc/udev/rules.d/60-android.rules
sudo cp -v $DOTFILES/xorg.conf.d/51-samsung-laptop.conf /usr/share/X11/xorg.conf.d/51-samsung-laptop.conf
sudo cp -av $DOTFILES/sources.list.d /etc/apt/sources.list.d

pushd $DOTFILES/powerline
sudo ./setup.py install
popd

