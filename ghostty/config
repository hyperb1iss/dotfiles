cursor-style-blink = true
cursor-opacity = 0.9
cursor-click-to-move = true

# ─────────────────────────────────────────────────────────────────────────────
# Selection — Royal purple highlight
# ─────────────────────────────────────────────────────────────────────────────
selection-background = #7a2d7a
