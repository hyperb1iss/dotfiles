# Red (1) / Bright Red (9) — Error Red
palette = 1=#ff6363
palette = 9=#ff8080

# Green (2) / Bright Green (10) — Success Green
palette = 2=#50fa7b
palette = 10=#70ff9b

# Yellow (3) / Bright Yellow (11) — Electric Yellow
