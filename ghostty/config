# ─────────────────────────────────────────────────────────────────────────────
# Splits & Focus
# ─────────────────────────────────────────────────────────────────────────────
unfocused-split-opacity = 0.80
unfocused-split-fill = #0d0d1a
split-divider-color = #4a1a4a
focus-follows-mouse = true

# ─────────────────────────────────────────────────────────────────────────────
# SilkCircuit Neon Color Palette
# ─────────────────────────────────────────────────────────────────────────────

# Background: Deep void with silk undertones
background = #0d0d1a
foreground = #e8e0f0

# Minimum contrast for accessibility
minimum-contrast = 1.1

# Black (0) / Bright Black (8) — Used for autosuggestions
palette = 0=#0d0d1a
